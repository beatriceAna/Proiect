@page
@model Proiect_Beatrice_Ana.Pages.Patients.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Patient</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Patient.ID" />
            <div class="form-group">
                <label asp-for="Patient.FirstName" class="control-label"></label>
                <input asp-for="Patient.FirstName" class="form-control" />
                <span asp-validation-for="Patient.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patient.LastName" class="control-label"></label>
                <input asp-for="Patient.LastName" class="form-control" />
                <span asp-validation-for="Patient.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patient.Address" class="control-label"></label>
                <input asp-for="Patient.Address" class="form-control" />
                <span asp-validation-for="Patient.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patient.CNP" class="control-label"></label>
                <input asp-for="Patient.CNP" class="form-control" />
                <span asp-validation-for="Patient.CNP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patient.PhoneNumber" class="control-label"></label>
                <input asp-for="Patient.PhoneNumber" class="form-control" />
                <span asp-validation-for="Patient.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patient.Insurance" class="control-label"></label>
                <input asp-for="Patient.Insurance" class="form-control" />
                <span asp-validation-for="Patient.Insurance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patient.DoctorID" class="control-label">Code</label>
                <select asp-for="Patient.DoctorID" class="form-control" asp-items="ViewBag.DoctorID"></select>
                <span asp-validation-for="Patient.DoctorID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="table">
                    <table>
                        <tr>
                            @{
                                int cnt = 0;
                                foreach (var cat in Model.AssignedAvailabilityDataList)
                                {
                                    if (cnt++ % 3 == 0)
                                    {
                                    @:</tr><tr>
                                    }
                                    @:<td>
                                        <input type="checkbox"
                                               name="selectedDatesAndHours"
                                               value="@cat.AvailableTimeDateID"
                                               @(Html.Raw(cat.Assigned ? "checked=\"checked\"" : "")) />
                                        @cat.AvailableTimeDateID @: @cat.DateTime
                                    @:</td>
                                }
                            @:</tr>
                            }
                        </table>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
